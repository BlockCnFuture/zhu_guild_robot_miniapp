.custom-textarea {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.text-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 86%;
  padding: 10rpx;
  line-height: 1.5;
  color: #000;
  background-color: #fff;
  z-index: 1;
}

.textarea {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 86%;
  z-index: 2;
}

.cnt-view {
  position: absolute;
  bottom: 3rpx;
  right: 3rpx;
  padding: 10rpx;
  line-height: 1.5;
  color: grey;
  background-color: #fff;
}

.tips-view {
  position: absolute;
  bottom: -10px;
  right: 0rpx;
  padding: 10rpx;
  line-height: 1.5;
  color: gray;
  background-color: #fff;
}
